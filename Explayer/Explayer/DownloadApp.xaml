<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Explayer.DownloadApp">
    <ContentPage.Content>
        <StackLayout>
            
            <Label Text="Download app from server:" />
            
            <Entry x:Name="serverUrlEntry"
                   Placeholder="https://static.isearchlab.org/explayer/apps" />

            <Entry x:Name="appNameEntry"
                   Placeholder="stimuli" />

            <Entry x:Name="appVersionEntry"
                   Placeholder="1.0.1" />
            
            <Button Text="Download App"
                    Clicked="OnDownloadButtonClicked" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>