<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Explayer.Views.DownloadAppPage"
             Title="Download a new app">
    
    <ContentPage.Content>
        <StackLayout>

            <Entry x:Name="ServerUrlEntry"
                   Text="https://appstore.isearchlab.org" />

            <Entry x:Name="AppNameEntry"
                   Text="stimuli" />

            <Entry x:Name="AppVersionEntry"
                   Text="1.0.1" />
            
            <Button Text="Download App"
                    Clicked="OnDownloadButtonClicked" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>